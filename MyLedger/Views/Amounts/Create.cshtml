@model MyLedger.Models.AddAmountViewModel

@{
    ViewData["Title"] = "Create Amount";
}

<h1>Create Amount</h1>
<script>
    window.addEventListener('DOMContentLoaded', (event) => {
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('CreatedAt').value = today;
    });
</script>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Bank</label>
        <select asp-for="Bank" class="form-select">
            <option value="">-- Select Bank --</option>
            <option value="RBC">RBC</option>
            <option value="CIBC">CIBC</option>
            <option value="TD">TD</option>
            <option value="Scotiabank">Scotiabank</option>
        </select>
    </div>


    <div class="mt-3">
        <label class="form-label">Amount</label>
        <input asp-for="AmountValue" class="form-control" />
    </div>

    <div class="mt-3">
        <label class="form-label">Created At</label>
        <input asp-for="CreatedAt" id="CreatedAt" type="date" class="form-control" />
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<div class="mt-4">
    <a asp-action="Index" class="text-primary">Back to List</a>
</div>
