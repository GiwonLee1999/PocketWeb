@model MyLedger.Models.AddAmountViewModel


@{
    ViewData["Title"] = "Edit Amount";
}

<h2 class="mb-4">Edit Amount</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mt-3">
        <label class="form-label">Bank</label>
        <select asp-for="Bank" class="form-select">
            <option value="">-- Select Bank --</option>
            <option value="RBC">RBC</option>
            <option value="CIBC">CIBC</option>
            <option value="TD">TD</option>
            <option value="Scotiabank">Scotiabank</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="AmountValue" class="form-label">Amount</label>
        <input asp-for="AmountValue" class="form-control" />
        <span asp-validation-for="AmountValue" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CreatedAt" class="form-label">Created At</label>
        <input asp-for="CreatedAt" type="date" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
